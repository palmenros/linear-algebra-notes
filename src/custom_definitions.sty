% Listas

\newcommand{\ulst}[2]{{#1}^{1}, {#1}^{2}, \dots, {#1}^{#2}} 
\newcommand{\dlst}[2]{{#1}_{1}, {#1}_{2}, \dots, {#1}_{#2}} 

\newcommand{\slst}[2]{\ulst{#1}{#2}}
\newcommand{\vlst}[2]{\dlst{\vec{#1}}{#2}}

\newcommand{\lincomb}[3]{{#1}^{1}\vec{#2}_{1}+{#1}^{2}\vec{#2}_{2}+\dots+{#1}^{#3}\vec{#2}_{#3}}

% Listas incompletas, es decir, 1, ..., i-1, i+1, ..., p
% El tercer parametro es i, el resto, como las listas

\newcommand{\iulst}[3]{{#1}^{1}, \dots, {#1}^{#3 - 1}, {#1}^{#3 +1},\dots, {#1}^{#2}} 
\newcommand{\idlst}[3]{{#1}_{1}, \dots, {#1}_{#3-1}, {#1}_{#3+1},\dots, {#1}_{#2}} 

\newcommand{\islst}[3]{\iulst{#1}{#2}{#3}}
\newcommand{\ivlst}[3]{\idlst{\vec{#1}}{#2}{#3}}

\newcommand{\ilincomb}[4]{{#1}^{1}\vec{#2}_{1}+\dots+ {#1}^{#4-1}\vec{#2}_{#4-1} + {#1}^{#4+1}\vec{#2}_{#4+1} + \dots + {#1}^{#3}\vec{#2}_{#3}}


